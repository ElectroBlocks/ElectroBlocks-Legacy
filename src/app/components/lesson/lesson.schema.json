{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/LessonModel",
  "definitions": {
    "LessonModel": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "objective": {
          "type": "string"
        },
        "image": {
          "type": "string"
        },
        "billOfMaterial": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "cost": {
                "type": "string"
              },
              "quantity": {
                "type": "number"
              }
            },
            "required": ["name", "cost", "quantity"],
            "additionalProperties": false
          }
        },
        "slides": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SlideModel"
          }
        },
        "googleFormUrl": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "author",
        "objective",
        "image",
        "billOfMaterial",
        "slides",
        "googleFormUrl"
      ],
      "additionalProperties": false
    },
    "SlideModel": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "src": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "STEP",
            "VIDEO",
            "IMAGE",
            "VIDEO_CHALLENGE_QUESTION",
            "VIDEO_CHALLENGE_ANSWER"
          ]
        },
        "step": {
          "type": "number"
        }
      },
      "required": ["title", "src", "text", "type"],
      "additionalProperties": false
    }
  }
}
